<div class="container mt-5">
  <div class="p-4 shadow-sm" style="background-color: #f8d7da; border-radius: 12px;">
    <%= form_with(model: comentario, local: true) do |form| %>
      <% if comentario.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(comentario.errors.count, "error") %> prohibited this comentario from being saved:</h4>
          <ul>
            <% comentario.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :contenido, class: "control-label text-danger" %>
        <%= form.text_area :contenido, class: "form-control", rows: 4 %>
      </div>

      <div class="form-group">
        <%= form.label :usuario_id, class: "control-label text-danger" %>
        <%= form.text_field :usuario_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :articulo_id, class: "control-label text-danger" %>
        <%= form.text_field :articulo_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Guardar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
