<% content_for :title, "Editar comentario" %>

<h1 class="mb-4 text-danger">Editar Comentario</h1>

<div class="card shadow-sm" style="background-color: #f8d7da; border-radius: 12px;">
  <div class="card-body">
    <%= render "form", comentario: @comentario %>
  </div>
</div>

<div class="mt-4 d-flex gap-2">
  <%= link_to "Ver este comentario", @comentario, class: "btn btn-link text-danger" %>
  <%= link_to "Regresar a comentarios", comentarios_path, class: "btn btn-secondary" %>
</div>
