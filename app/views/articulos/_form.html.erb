<div class="container mt-5">
  <div class="p-4" style="background-color: #f8d7da; border-radius: 12px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <%= form_with(model: articulo, local: true) do |form| %>
      <% if articulo.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(articulo.errors.count, "error") %> prohibited this article from being saved:</h4>
          <ul>
            <% articulo.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :titulo, class: "control-label text-success" %>
        <%= form.text_field :titulo, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :contenido, class: "control-label text-success" %>
        <%= form.text_area :contenido, class: "form-control", rows: 4 %>
      </div>

      <div class="form-group">
        <%= form.label :usuario_id, class: "control-label text-success" %>
        <%= form.text_field :usuario_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Guardar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
