<p class="text-success"><%= notice %></p>

<% content_for :title, "Artículos" %>

<h1 class="mb-4 text-success">Artículos</h1>

<div id="articulos" class="mb-5">
  <% @articulos.each do |articulo| %>
    <div class="card mb-3 shadow-sm" style="background-color: #f8d7da; border-radius: 12px;">
      <div class="card-body">
        <%= render articulo %>
        <p class="mt-3">
          <%= link_to "Ver este artículo", articulo, class: "btn btn-link text-success" %>
        </p>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Nuevo artículo", new_articulo_path, class: "btn btn-primary" %>
