<div class="container mt-5">
  <div style="background-color: #f8d7da; border-radius: 12px; padding: 20px;">
    <%= form_with(model: usuario, local: true) do |form| %>
      <% if usuario.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h4>
          <ul>
            <% usuario.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :nombre, class: "control-label" %>
        <%= form.text_field :nombre, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :email, class: "control-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.submit "Guardar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
