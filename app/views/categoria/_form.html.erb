<div class="card mb-4 shadow-sm" style="background-color: #f8d7da; border-radius: 12px; padding: 20px;">
  <%= form_with(model: categorium, local: true) do |form| %>
    <% if categorium.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(categorium.errors.count, "error") %> prohibited this categorium from being saved:</h4>
        <ul>
          <% categorium.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group mb-3">
      <%= form.label :nombre, class: "control-label text-success" %>
      <%= form.text_field :nombre, class: "form-control" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :descripcion, class: "control-label text-success" %>
      <%= form.text_area :descripcion, class: "form-control", rows: 4 %>
    </div>

    <div>
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

